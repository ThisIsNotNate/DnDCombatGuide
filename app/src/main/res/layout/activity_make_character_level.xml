<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".MakeCharacterLevel">

    <Button
        android:id="@+id/buttonToMakeClass"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:foreground="?attr/actionModeCloseDrawable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonToMakeStats"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:foreground="?attr/actionModeCloseDrawable"
        android:scaleX="-1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/buttonLevelMinus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:text="-"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="44sp"
        app:layout_constraintLeft_toRightOf="@+id/textViewLevel"
        app:layout_constraintTop_toBottomOf="@+id/buttonLevelPlus" />

    <Button
        android:id="@+id/buttonLevelPlus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:background="@color/colorPrimary"
        android:text="+"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36sp"
        app:layout_constraintLeft_toRightOf="@+id/textViewLevel"
        app:layout_constraintTop_toBottomOf="@+id/textViewLevelTitle" />

    <EditText
        android:id="@+id/textViewLevel"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="40dp"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:gravity="center|center_horizontal"
        android:inputType="number"
        android:text="1"
        android:textSize="60sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLevelTitle" />

    <TextView
        android:id="@+id/textViewLevelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:text="What level is your character?"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>